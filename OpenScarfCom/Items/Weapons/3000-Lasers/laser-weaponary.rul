items:
  - &STR_LASER_GLOBAL
    type: STR_LASER_GLOBAL
    clipSize: 40
    confSnap:
      spendPerShot: 6
    confAuto:
      spendPerShot: 6
      name: STR_SHOT_TYPE_SPECTRUM_LASER
    confAimed:
      spendPerShot: 24
      followProjectiles: true
      name: STR_SHOT_TYPE_CHARGED
    tags:
      AMMO_CHARGE_RATE: 18
      AUTO_POWER_MUL_PERCENT: -25
