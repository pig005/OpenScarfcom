    refNode: *STR_LASER_GLOBAL
    power: 75 # 60 -> 75 (125%): indicates AIMED
  # AIMED (reaction)
    # tuSnap: 50
    # accuracySnap: 100
  # SNAP (prev.aimed)
    # tuAimed: 25
    # accuracyAimed: 65

  - type: STR_HEAVY_LASER
    refNode: *STR_LASER_GLOBAL
    power: 128 # 50% increment of 85;
  # AUTO
    tuAuto: 45
    accuracyAuto: 40
    confAuto:
      spendPerShot: 3
      shots: 6
  # AIMED (reaction)
    accuracySnap: 110 # AIMED
    tuSnap: 70
  # SNAP (prev.aimed)
    tuAimed: 30
    accuracyAimed: 60 # SNAP
    confAimed:
      spendPerShot: 9
